<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEEEA"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_obj"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/hongnhung" />

    <TextView
        android:id="@+id/describe_obj"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="80dp"
        android:text="hoa hong nhung dep"
        android:textColor="#34A8DD"
        app:fontFamily="casual" />

    <TextView
        android:id="@+id/name_obj"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/img_obj"
        android:gravity="center"
        android:text="Hoa há»“ng nhung"
        android:textColor="#EB2A1B"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</RelativeLayout>